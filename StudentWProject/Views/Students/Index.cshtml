@model List<StudentWProject.Models.Student>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<div id="home">
    <div class="landing-text">
        <div class="row text-center">
            <div class="col-12">
                <h4>Welcome to the </h4>
                <hr>
                <h1 class="display-4">Students Project</h1>
                <hr>
                <h3>STUDENT'S SECTION</h3>
            </div>
            <div class="col-12">
                <p>
                    <a asp-action="Create">Create New</a>
                </p>



            </div>
        </div>
    </div>
</div>
<form asp-controller="Students" asp-action="Index" method="get">
    @*<p>

            Title: <input type="text" name="SearchString">
            <input type="submit" value="Filter" />
        </p>*@
    <div class="form-group">
        <label class="control-label">Grade</label>
        <select asp-for="@Model[0].GradeRefId" asp-items="(SelectList)@ViewData["selectlist"]"></select>
        <input type="submit" value="Filter" />
    </div>
</form>
<table class="table table-dark">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].GradeRefId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].AmbionRefId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade.GradeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ambion.AmbionName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<a asp-controller="Home" asp-action="Index">Home</a>
