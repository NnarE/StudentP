@model StudentWProject.Models.Student
@{
    ViewData["Title"] = "Edit";
}


<h1>Edit</h1>
<h4>Student</h4>
<hr />
<div class="row text-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" name="CurrentGradeID" value="@Model.GradeRefId" />
                <label asp-for="GradeRefId" class="control-label"></label>
                <select asp-for="GradeRefId" asp-items="(SelectList)@ViewData["selectlist2"]"></select>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" name="CurrentGradeID" value="@Model.AmbionRefId" />
                <label asp-for="AmbionRefId" class="control-label"></label>
                <select asp-for="AmbionRefId" asp-items="(SelectList)@ViewData["selectlist2"]"></select>
                <span asp-validation-for="Ambion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
